<div class="row">
  <div class="col-sm-6">
    <a href="#!" id="buy">Buy now</a>

    <script type="text/javascript">
      function openCheckout(event) {
        event.preventDefault()
        Paddle.Checkout.open({
          product: 7737,
          passthrough: "<%= Pay::PaddleClassic.passthrough(owner: current_user) %>"
        });
      }
      document.getElementById('buy').addEventListener('click', openCheckout, false);
    </script>
  </div>

  <div class="col-sm-6">
  </div>
</div>
