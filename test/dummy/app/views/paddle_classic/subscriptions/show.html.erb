<h1>Paddle Classic Subscription</h1>

<pre><code><%= @subscription.pretty_inspect %></code></pre>

<h6>Actions</h6>
<%= button_to "Resume", resume_paddle_classic_subscription_path(@subscription), method: :patch, class: "d-block" if @subscription.on_grace_period? %>
<%= button_to "Cancel at period end", cancel_paddle_classic_subscription_path(@subscription), method: :patch, class: "d-block" %>
<%= button_to "Cancel immediately", paddle_classic_subscription_path(@subscription), method: :delete, class: "d-block" %>
